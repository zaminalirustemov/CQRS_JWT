@model List<CategoryListModel>

@{
    if (Model?.Count > 0)
    {
        <table class="table">
        <a asp-action="create" asp-controller="category" class="btn btn-success">New Category</a>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Definition</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (CategoryListModel categoryListModel in Model)
                {
                    <tr>
                        <td>@categoryListModel.Id</td>
                        <td>@categoryListModel.Definition</td>
                        <td>
                            <a asp-action="Update" asp-controller="Category" asp-route-id="@categoryListModel.Id" class="btn btn-primary btn-sm">Update</a>
                            <a asp-action="Remove" asp-controller="Category" asp-route-id="@categoryListModel.Id" class="btn btn-danger btn-sm">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <div class="text-center">
            Her hansi data movcud deyil
        </div>
    }
}