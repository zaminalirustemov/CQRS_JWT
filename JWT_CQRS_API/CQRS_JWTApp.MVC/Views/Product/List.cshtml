@model List<ProductListModel>

@{
    if (Model?.Count > 0)
    {
        <table class="table">
            <a asp-action="create" asp-controller="product" class="btn btn-success">New Product</a>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>CategoryID</td>
                    <td>Name</td>
                    <td>Stock</td>
                    <td>Price</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (ProductListModel productListModel in Model)
                {
                    <tr>
                        <td>@productListModel.Id</td>
                        <td>@productListModel.CategoryId</td>
                        <td>@productListModel.Name</td>
                        <td>@productListModel.Stock</td>
                        <td>@productListModel.Price</td>
                        <td>
                            <a asp-action="Update" asp-controller="product" asp-route-id="@productListModel.Id" class="btn btn-primary btn-sm">Update</a>
                            <a asp-action="Remove" asp-controller="product" asp-route-id="@productListModel.Id" class="btn btn-danger btn-sm">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <div class="text-center">
            Her hansi data movcud deyil
        </div>
    }
}