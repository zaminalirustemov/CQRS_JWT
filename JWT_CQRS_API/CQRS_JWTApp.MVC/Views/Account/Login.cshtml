@model UserLoginModel

<form asp-action="login" asp-controller="account" method="post">
    <div class="mb-3">
        <label asp-for="@Model.Username" class="form-label">Username</label>
        <input asp-for="@Model.Username" class="form-control" >
        <span asp-validation-for="@Model.Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Password" class="form-label">Password</label>
        <input asp-for="@Model.Password" class="form-control">
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
